@page
@model ProfileModel
@{
    ViewData["Title"] = "Profile";
}

<div class="row">
    <div class="col-md-12">
        <h1 class="mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" width="36" height="36" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
                <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0"/>
                <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1"/>
            </svg>
            User Profile
        </h1>
        <p class="lead">Profile information retrieved from Microsoft Graph API</p>
    </div>
</div>

@if (Model.HasError)
{
    <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle-fill" viewBox="0 0 16 16">
                <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5m.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2"/>
            </svg>
            Error Loading Profile
        </h4>
        <p class="mb-0">@Model.ErrorMessage</p>
    </div>
}
else if (Model.UserProfile != null)
{
    <div class="row">
        <div class="col-md-4 text-center mb-4">
            <div class="card">
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.ProfilePhotoUrl))
                    {
                        <img src="@Model.ProfilePhotoUrl" alt="Profile Photo" class="profile-picture mb-3" />
                    }
                    else
                    {
                        <div class="profile-picture mb-3 d-inline-flex align-items-center justify-content-center bg-primary text-white" style="font-size: 4rem;">
                            @if (!string.IsNullOrEmpty(Model.UserProfile.DisplayName))
                            {
                                @Model.UserProfile.DisplayName.Substring(0, 1).ToUpper()
                            }
                            else
                            {
                                <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
                                    <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0"/>
                                    <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1"/>
                                </svg>
                            }
                        </div>
                    }
                    <h3 class="mb-2">@Model.UserProfile.DisplayName</h3>
                    @if (!string.IsNullOrEmpty(Model.UserProfile.JobTitle))
                    {
                        <p class="text-muted mb-0">@Model.UserProfile.JobTitle</p>
                    }
                    @if (User.IsInRole("Admin") || User.IsInRole("Manager") || User.IsInRole("User"))
                    {
                        <div class="mt-3">
                            @if (User.IsInRole("Admin"))
                            {
                                <span class="role-badge role-admin">Admin</span>
                            }
                            @if (User.IsInRole("Manager"))
                            {
                                <span class="role-badge role-manager">Manager</span>
                            }
                            @if (User.IsInRole("User"))
                            {
                                <span class="role-badge role-user">User</span>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-info-circle-fill" viewBox="0 0 16 16">
                            <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16m.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2"/>
                        </svg>
                        Basic Information
                    </h5>
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tbody>
                            <tr>
                                <th scope="row" style="width: 30%;">Display Name:</th>
                                <td>@Model.UserProfile.DisplayName</td>
                            </tr>
                            @if (!string.IsNullOrEmpty(Model.UserProfile.GivenName))
                            {
                                <tr>
                                    <th scope="row">Given Name:</th>
                                    <td>@Model.UserProfile.GivenName</td>
                                </tr>
                            }
                            @if (!string.IsNullOrEmpty(Model.UserProfile.Surname))
                            {
                                <tr>
                                    <th scope="row">Surname:</th>
                                    <td>@Model.UserProfile.Surname</td>
                                </tr>
                            }
                            @if (!string.IsNullOrEmpty(Model.UserProfile.Mail))
                            {
                                <tr>
                                    <th scope="row">Email:</th>
                                    <td>
                                        <a href="mailto:@Model.UserProfile.Mail">@Model.UserProfile.Mail</a>
                                    </td>
                                </tr>
                            }
                            @if (!string.IsNullOrEmpty(Model.UserProfile.UserPrincipalName))
                            {
                                <tr>
                                    <th scope="row">User Principal Name:</th>
                                    <td>@Model.UserProfile.UserPrincipalName</td>
                                </tr>
                            }
                            @if (!string.IsNullOrEmpty(Model.UserProfile.Id))
                            {
                                <tr>
                                    <th scope="row">User ID:</th>
                                    <td><code>@Model.UserProfile.Id</code></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.UserProfile.JobTitle) || 
                 !string.IsNullOrEmpty(Model.UserProfile.Department) || 
                 !string.IsNullOrEmpty(Model.UserProfile.OfficeLocation) ||
                 !string.IsNullOrEmpty(Model.UserProfile.MobilePhone) ||
                 Model.UserProfile.BusinessPhones?.Any() == true)
            {
                <div class="card mb-4">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-briefcase-fill" viewBox="0 0 16 16">
                                <path d="M6.5 1A1.5 1.5 0 0 0 5 2.5V3H1.5A1.5 1.5 0 0 0 0 4.5v1.384l7.614 2.03a1.5 1.5 0 0 0 .772 0L16 5.884V4.5A1.5 1.5 0 0 0 14.5 3H11v-.5A1.5 1.5 0 0 0 9.5 1zm0 1h3a.5.5 0 0 1 .5.5V3H6v-.5a.5.5 0 0 1 .5-.5"/>
                                <path d="M0 12.5A1.5 1.5 0 0 0 1.5 14h13a1.5 1.5 0 0 0 1.5-1.5V6.85L8.129 8.947a.5.5 0 0 1-.258 0L0 6.85z"/>
                            </svg>
                            Work Information
                        </h5>
                    </div>
                    <div class="card-body">
                        <table class="table table-borderless">
                            <tbody>
                                @if (!string.IsNullOrEmpty(Model.UserProfile.JobTitle))
                                {
                                    <tr>
                                        <th scope="row" style="width: 30%;">Job Title:</th>
                                        <td>@Model.UserProfile.JobTitle</td>
                                    </tr>
                                }
                                @if (!string.IsNullOrEmpty(Model.UserProfile.Department))
                                {
                                    <tr>
                                        <th scope="row">Department:</th>
                                        <td>@Model.UserProfile.Department</td>
                                    </tr>
                                }
                                @if (!string.IsNullOrEmpty(Model.UserProfile.OfficeLocation))
                                {
                                    <tr>
                                        <th scope="row">Office Location:</th>
                                        <td>@Model.UserProfile.OfficeLocation</td>
                                    </tr>
                                }
                                @if (!string.IsNullOrEmpty(Model.UserProfile.MobilePhone))
                                {
                                    <tr>
                                        <th scope="row">Mobile Phone:</th>
                                        <td>@Model.UserProfile.MobilePhone</td>
                                    </tr>
                                }
                                @if (Model.UserProfile.BusinessPhones?.Any() == true)
                                {
                                    <tr>
                                        <th scope="row">Business Phones:</th>
                                        <td>
                                            @foreach (var phone in Model.UserProfile.BusinessPhones)
                                            {
                                                <div>@phone</div>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }

            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-gear-fill" viewBox="0 0 16 16">
                            <path d="M9.405 1.05c-.413-1.4-2.397-1.4-2.81 0l-.1.34a1.464 1.464 0 0 1-2.105.872l-.31-.17c-1.283-.698-2.686.705-1.987 1.987l.169.311c.446.82.023 1.841-.872 2.105l-.34.1c-1.4.413-1.4 2.397 0 2.81l.34.1a1.464 1.464 0 0 1 .872 2.105l-.17.31c-.698 1.283.705 2.686 1.987 1.987l.311-.169a1.464 1.464 0 0 1 2.105.872l.1.34c.413 1.4 2.397 1.4 2.81 0l.1-.34a1.464 1.464 0 0 1 2.105-.872l.31.17c1.283.698 2.686-.705 1.987-1.987l-.169-.311a1.464 1.464 0 0 1 .872-2.105l.34-.1c1.4-.413 1.4-2.397 0-2.81l-.34-.1a1.464 1.464 0 0 1-.872-2.105l.17-.31c.698-1.283-.705-2.686-1.987-1.987l-.311.169a1.464 1.464 0 0 1-2.105-.872zM8 10.93a2.929 2.929 0 1 1 0-5.86 2.929 2.929 0 0 1 0 5.858z"/>
                        </svg>
                        Account Details
                    </h5>
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tbody>
                            @if (!string.IsNullOrEmpty(Model.UserProfile.PreferredLanguage))
                            {
                                <tr>
                                    <th scope="row" style="width: 30%;">Preferred Language:</th>
                                    <td>@Model.UserProfile.PreferredLanguage</td>
                                </tr>
                            }
                            @if (Model.UserProfile.AccountEnabled.HasValue)
                            {
                                <tr>
                                    <th scope="row">Account Status:</th>
                                    <td>
                                        @if (Model.UserProfile.AccountEnabled.Value)
                                        {
                                            <span class="badge bg-success">Enabled</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Disabled</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="info-box mt-4">
        <h5>
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-lightbulb-fill" viewBox="0 0 16 16">
                <path d="M2 6a6 6 0 1 1 10.174 4.31c-.203.196-.359.4-.453.619l-.762 1.769A.5.5 0 0 1 10.5 13h-5a.5.5 0 0 1-.46-.302l-.761-1.77a2 2 0 0 0-.453-.618A5.98 5.98 0 0 1 2 6m3 8.5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1l-.224.447a1 1 0 0 1-.894.553H6.618a1 1 0 0 1-.894-.553L5.5 15a.5.5 0 0 1-.5-.5"/>
            </svg>
            About This Profile
        </h5>
        <p class="mb-0">
            This profile information is retrieved from <strong>Microsoft Graph API</strong> using the <code>User.Read</code> scope. 
            The data shown here is stored in your Entra External ID directory.
        </p>
    </div>
}
else
{
    <div class="spinner-container">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
